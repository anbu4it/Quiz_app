# Example environment configuration for production
# Copy this file to .env and adjust values.

SECRET_KEY=replace-with-long-random-string
DATABASE_URL=postgresql://user:password@host:5432/quiz_app
# Cookie security (set to 1 in production over HTTPS)
SESSION_COOKIE_SECURE=1
REMEMBER_COOKIE_SECURE=1
SESSION_COOKIE_SAMESITE=Strict
PREFERRED_URL_SCHEME=https
# Set FLASK_DEBUG=1 only for local development
FLASK_DEBUG=0
